{
  "compilerOptions": {
    "baseUrl": "src",
    "target": "es2015",
    "module": "commonjs",
    "moduleResolution": "node",
    "strict": false,
    "noImplicitAny": false,
    "strictPropertyInitialization": false,
    "sourceMap": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": false,
    "typeRoots": ["typings"]
  },
  "ts-node": {
    "compilerOptions": {
      "module": "CommonJS",
      "allowSyntheticDefaultImports": true
    }
  },
  "exclude": ["node_modules", "assets", "scripts", "**/*.d.ts"]
}
